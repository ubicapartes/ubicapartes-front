<zk xmlns:w="client" xmlns:n="native">
	<window border="none" apply="org.zkoss.bind.BindComposer"
		sclass="winMyList"
		viewModel="@id('vm') @init('com.okiimport.app.mvvm.controladores.ListaRequerimientosGeneralViewModel')">

		<!-- LISTA DE TODOS LOS REQUERIMIENTOS EN EL SISTEMA-->
		<panel sclass="borderGrid">
			<panelchildren>
				<hbox width="100%" align="center">
					<paging id="pagMisRequerimientos" hflex="1"
						onPaging="@command('paginarLista')" autohide="true" />
					<div sclass="z-paging z-paging-info"
						height="28px">
						<label id="lblMisRequerimientos"
							sclass="rRmWwb-info" />
					</div>
				</hbox>
				<listbox id="gridMisRequerimientos"
					emptyMessage="No hay solicitudes" mold="paging" pageSize="10"
					pagingPosition="top"
					onAfterRender="@command('updatePaging', paging = pagMisRequerimientos, label=lblMisRequerimientos)"
					sclass="mylist" model="@load(vm.listaRequerimientos)">

					<auxhead>
						<auxheader />
						<auxheader>
							<div sclass="z-icon-filter bigger-200" />
							<spinner instant="true" hflex="1"
								value="@bind(vm.requerimientoFiltro.idRequerimiento)"
								onChange="@command('aplicarFiltro')" />
						</auxheader>
						<auxheader>
							<div sclass="z-icon-filter bigger-200" />
							<textbox instant="true" hflex="1"
								value="@bind(vm.requerimientoFiltro.cliente.nombre)"
								onChange="@command('aplicarFiltro')" />
						</auxheader>
						<auxheader>
							<div sclass="z-icon-filter bigger-200" />
							<datebox instant="true" hflex="1"
								format="@bind(vm.formatDate)"
								value="@bind(vm.requerimientoFiltro.fechaCreacion)"
								onChange="@command('aplicarFiltro')" />
						</auxheader>
						<auxheader>
							<div sclass="z-icon-filter bigger-200" />
							<textbox instant="true" hflex="1"
								value="@bind(vm.requerimientoFiltro.modeloV)"
								onChange="@command('aplicarFiltro')" />
						</auxheader>
						<auxheader>
							<div sclass="z-icon-filter bigger-200" />
							<textbox instant="true" hflex="1"
								value="@bind(vm.requerimientoFiltro.analista)"
								onChange="@command('aplicarFiltro')" />
						</auxheader>
						<auxheader>
							<div sclass="z-icon-filter bigger-200" />
							<combobox instant="true" readonly="true"
								hflex="1" selectedItem="@bind(vm.estatusFiltro)"
								model="@load(vm.listaEstatus)"
								onChange="@command('aplicarFiltro')"
								value="@bind(vm.estatusFiltro.nombre)">
								<template name="model">
									<comboitem
										label="@bind(each.nombre)" />
								</template>
							</combobox>
						</auxheader>
					</auxhead>


					<listhead>
						<listheader width="2%" />
						<listheader value="idRequerimiento" width="10%"
							label="Nro. Solicitud" sort="auto(idRequerimiento)" />
						<listheader value="cliente.nombre" width="20%"
							label="Cliente" sort="auto(idRequerimiento)" />
						<listheader value="fechaCreacion" width="15%"
							label="Fecha de CreaciÃ³n" sort="auto(fechaCreacion)" />
						<listheader value="modeloV" width="15%"
							label="Modelo" sort="auto(modeloV)" />
						<listheader value="analista" width="15%"
							label="Analista" sort="auto(analista)" />
						<listheader value="estatus" width="20%"
							label="Estado" sort="none" />
					</listhead>
					<template name="model">
						<listitem>
							<listcell label="${forEachStatus.index+1}"
								sclass="boxed-grey" />
							<listcell
								label="@bind(each.idRequerimiento)" />
							<listcell
								label="@bind((each.cliente.nombre).concat(' ').concat(each.cliente.apellido))" />
							<listcell
								label="@bind(each.fechaCreacion)
												@converter('formatedDate', format=vm.formatDate)" />
							<listcell label="@bind(each.modeloV)" />
							<listcell label="@bind((each.analista.nombre).concat(' ').concat(each.analista.apellido))" />
							<listcell
								label="@bind(each.determinarEstatus())" />
						</listitem>
					</template>

				</listbox>
			</panelchildren>
		</panel>
	</window>
</zk>